        "type": "panel",
        "name": "Header",
        "layout": {
          "type": "horizontal",
          "spacing": 6,
          "alignment": "middleCenter"
        },
        "style": {
          "backgroundColor": { "r": 1, "g": 1, "b": 1, "a": 1 },
          "cornerRadius": 6
